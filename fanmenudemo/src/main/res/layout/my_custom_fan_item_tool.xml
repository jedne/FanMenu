<?xml version="1.0" encoding="utf-8"?>
<com.jeden.fanmenudemo.view.MyCustomMenuItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:id="@+id/fan_item_icon"
            android:layout_width="@dimen/fanmenu_menu_item_icon_width"
            android:layout_height="@dimen/fanmenu_menu_item_icon_width"
            android:layout_centerHorizontal="true"
            android:src="@drawable/fan_item_icon_bluetooth"
            android:scaleType="center"
            android:background="@drawable/fan_item_icon_bg"/>

        <TextView
            android:id="@+id/fan_item_title"
            android:layout_width="@dimen/fanmenu_menu_item_title_width"
            android:layout_height="wrap_content"
            android:layout_below="@id/fan_item_icon"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="1dp"
            android:maxLines="1"
            android:textColor="@color/fanmenu_center_text_color"
            android:textSize="@dimen/fanmenu_menu_item_title_size" />

        <ImageView
            android:id="@+id/fan_item_delete"
            android:layout_width="@dimen/fanmenu_menu_item_close_width"
            android:layout_height="@dimen/fanmenu_menu_item_close_width"
            android:layout_alignLeft="@+id/fan_item_icon"
            android:layout_alignParentTop="true"
            android:src="@drawable/fan_item_close"
            android:visibility="gone" />
    </RelativeLayout>
</com.jeden.fanmenudemo.view.MyCustomMenuItemView>