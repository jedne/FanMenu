<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/fan_item_icon"
        android:layout_width="@dimen/fan_menu_item_icon_width"
        android:layout_height="@dimen/fan_menu_item_icon_width"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/fan_item_add_icon"
        android:scaleType="fitXY"
        android:background="@null"/>

    <TextView
        android:id="@+id/fan_item_title"
        android:layout_width="@dimen/fan_menu_item_title_width"
        android:layout_height="wrap_content"
        android:layout_below="@id/fan_item_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/fan_menu_common_white_color"
        android:textSize="@dimen/fan_menu_item_title_size" />
</FrameLayout>